<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCreateOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Create an Order"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOrderIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Order ID"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Order ID"
                android:inputType="number"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/rgDining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:textSize="20dp">

                <RadioButton
                    android:id="@+id/rbDineIn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Dine-in" />

                <RadioButton
                    android:id="@+id/rbTakeAway"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Take-away" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvTableNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Table Number"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Table Number (Dine in only)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Entrees"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/containerEntree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mains"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/containerMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Drinks"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/containerDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Total Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total Price"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Back" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Delete" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Save" />

            </LinearLayout>

            <Button
                android:id="@+id/btnDone"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Done" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>